{% extends "base.html.twig" %}

{% block content %}
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image">
                            <img src="http://placekitten.com/500/600">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h3 text-gray-900  fw-bold">Bonjour !</h1>
                                        <p class="text-center fs-6 fw-light">Veuillez vous connecter pour accéder au site.</p>
                                    </div>
                                   {% if errmessage is defined %}
                                    <p class="error_message" >{{errmessage}}</p>
                                    {% endif %}
                                    <form method="post" action="{{ path }}/?controller=User&action=login">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                name="email" aria-describedby="emailHelp"
                                                placeholder="Votre adresse email...">
                                                <p class="error_message email-error" style="display : none">error message hear</p>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                name="password" placeholder="Votre mot de passe...">
                                        </div>
                                        <input type="submit" value="Valider" class="btn btn-primary btn-user btn-block"/>
                                    </form>
                                    <hr>
                                    <p>Pas de compte ? <a href="{{ path }}/?controller=User&action=createForm">En créer un.</a></p>
                                    <a class="" href="{{ path }}/?controller=User&action=loginForm" ><p>Mot de passe perdu ? </a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>



</body>



{% endblock %}